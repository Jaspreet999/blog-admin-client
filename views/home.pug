extends layout.pug
block contents 

    if blogs 
        each blog in blogs

            div(class ="card")
                div(class ="card-body")
                    div(class="heading")
                        div(class = "card-title")
                            h3 #{blog.title}   
                        div(class = "card-date")
                            - const moment = require('moment')
                            h5(class = "card-date")= moment(blog.date).format('YYYY-MM-DD')   

                    div(class = "card-description") #{blog.message}

                    p(class="creator") created by #{blog.author.username}

                    a(href="/home/"+blog._id+"/view" ) view
                    a(href="/home/"+blog._id+"/update" ) update
                    a(href="/home/"+blog._id ) delete
                    if blog.visibility 
                        a(href="/home/"+blog._id+"/visibility" ) unpublish
                    else
                        a(href="/home/"+blog._id+"/visibility" ) publish
    else 
       div(class = "header_name")
            h5 No blog posted yet                     
      
                    


    